<%= turbo_stream.update("follow_#{dom_id @other_user}") do %>
  <%= link_to 'follow', user_follows_path(@other_user), method: :post, data: { turbo_method: :post }, class: "bg-transparent hover:bg-blue-500 text-gray-700 font-semibold hover:text-white py-2 px-4 border border-gray-600 hover:border-transparent rounded" if @other_user != current_user %>
<%end %>

<%= turbo_stream.update("counter_followers_#{dom_id @other_user}") do %>
  <span class="text-base font-semibold text-gray-700 mr-2">
    <b><%= @other_user.followers.count %></b> followers
  </span>
<%end %>



