<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <%if current_user %>
      <%= link_to 'New post', new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
      <%= link_to 'sign out', destroy_user_session_path, 'data-turbo-method': :delete, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <%else %>
      <%= link_to 'sign up', new_user_registration_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
      or
      <%= link_to 'Log in', new_user_session_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <%end %>
  </div>

  <div id="posts" class="min-w-full">
    <%= render @posts %>
  </div>
</div>
