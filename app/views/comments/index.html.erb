<div class="container">
  <div class="py-8">
  </div>
  <div class="w-full h-full bg-gray-800 bg-opacity-90 top-1 overflow-y-auto overflow-x-hidden fixed sticky-0" id="chec-div">
    <% @post.pictures.each do |picture| %>
      <%= image_tag picture %>
    <% end %>
    <div class="w-full absolute z-10 right-20 h-full overflow-x-hidden transform translate-x-0 transition ease-in-out duration-700" id="notification">
      <div class="2xl:w-4/12 bg-gray-50 h-screen overflow-y-auto p-10 absolute right-0">
        <div class="w-full p-3 mt-8 bg-white rounded flex">
          <div tabindex="0" aria-label="heart icon" role="img" class="focus:outline-none w-8 h-8 border rounded-full border-gray-200 flex items-center justify-center">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <%= link_to image_tag(@post.user.avatar, class: "rounded-full border border-gray-100 shadow-sm") if current_user.avatar.attached?%>
            </svg>
          </div>
          <div class="pl-3">
            <p tabindex="0" class="focus:outline-none text-sm leading-none"><span><%= link_to(@post.user.username,users_show_path(@post.user) ) %></span>
            <p tabindex="0" class="focus:outline-none text-xs leading-3 pt-1 text-gray-500"><%=@post.description %></p>
          </div>
        </div>
        COMMENTS
        <%@post.comments.each do |comment| %>
          <div class="w-full p-3 mt-4 bg-white rounded shadow flex flex-shrink-0">
            <div tabindex="0" aria-label="group icon" role="img" class="focus:outline-none w-8 h-8 border rounded-full border-gray-200 flex flex-shrink-0 items-center justify-center">
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <%= link_to image_tag(comment.user.avatar, class: "rounded-full border border-gray-100 shadow-sm") if comment.user.avatar.attached? %>
              </svg>
            </div>
            <div class="pl-3 w-full">
              <div class="flex items-center justify-between w-full">
                <p tabindex="0" class="focus:outline-none text-sm leading-none"><span><%= comment.user.username %></span>
                <div tabindex="0" aria-label="close icon" role="button" class="focus:outline-none cursor-pointer">
                  <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M10.5 3.5L3.5 10.5" stroke="#4B5563" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M3.5 3.5L10.5 10.5" stroke="#4B5563" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </div>
              </div>
              <p tabindex="0" class="focus:outline-none text-xs leading-3 pt-1 text-gray-500"><%=comment.content %></p>
            </div>
          </div>
        <%end %>
      </div>
    </div>
  </div>
</div>
